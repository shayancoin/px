{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2022",
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@repo/design-engine": ["../design-engine/dist/index.d.cts"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    {
      "path": "../design-engine"
    }
  ]
}

